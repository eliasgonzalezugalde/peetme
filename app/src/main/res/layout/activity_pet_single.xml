<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peetme.app.trunimal.com.peetme.PetSingleActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/petImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/input_outline"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_btn"
                app:srcCompat="@mipmap/add_btn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/textViewNameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_name_is"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewPhoneTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/phone"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewAgeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/age"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewGenderTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/gender"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewSizeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/size"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewHealthTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/health"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewHealth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewCastratedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/castrated"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewCastrated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewVaccinatedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/vaccinated"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewVaccinated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewWormedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/wormed"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewWormed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewAdditionalInfoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/additionalInfo"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewAdditionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewSpeciesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/species"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewSpecies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewAdoptedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/adopted"
                        android:textColor="@color/textViewColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textViewAdopted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/textViewColor"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewCreatedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textColor="@color/textViewColor"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
